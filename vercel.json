{
  "crons": [
    {
      "path": "/api/cron/auto-resolve",
      "schedule": "0 12 * * *"
    },
    {
      "path": "/api/cron/transition-blind-periods",
      "schedule": "0 0 * * *"
    }
  ],
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "s-maxage=1, stale-while-revalidate"
        }
      ]
    }
  ],
  "env": {
    "NODE_ENV": "production"
  },
  "build": {
    "env": {
      "NEXT_TELEMETRY_DISABLED": "1"
    }
  },
  "functions": {
    "app/api/**": {
      "maxDuration": 10
    },
    "app/api/cron/**": {
      "maxDuration": 60
    }
  }
}
